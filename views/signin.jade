extends layout

block content
  form#regFrom.form-signin(method='post', role='form')
    h2.form-signin-heading 用户注册
    .form-group
      label(for='email') 电子邮箱
      input#email.form-control(type='text', name='email', placeholder='电子邮箱', required, autofocus)
    .form-group
      label(for='nickname') 昵称
      input#nickname.form-control(type='text', name='nickname', placeholder='昵称', required)
    .form-group#verifypass
      label(for='password') 密码
      input#password.form-control(type='password', name='password', placeholder='密码', required)
      label(for='password-repeat') 请重复输入
      input#password-repeat.form-control(type='password', name='password-repeat', placeholder='请重复输入', required)
    button#submitbtn.btn.btn-lg.btn-primary.btn-block(type='submit', onclick='return check()') 注册
  script.
    function check() {
      if($('#password').val()!=$('#password-repeat').val()){
        alert('两次输入密码不一致');
        return false;
      }else{
        return true;
      }
    }
  link(rel='stylesheet', href='/stylesheets/signin.css')