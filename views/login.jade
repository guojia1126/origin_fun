extends layout

block content

  form.form-signin#loginForm(method='post', action='/login', role='form')
    h2.form-signin-heading 用户登录
    .form-group
      label(for='email') 电子邮箱
      input#email.form-control(type='text', name='email', placeholder='电子邮箱', required, autofocus)
    .form-group
      label(for='password') 密码
      input#password.form-control(type='password', name='password', placeholder='密码', required)
    button.btn.btn-lg.btn-primary.btn-block(type='submit') 登录
  link(rel='stylesheet', href='/stylesheets/signin.css')